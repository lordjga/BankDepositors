<Window x:Class="BankDepositors.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BankDepositors"
        mc:Ignorable="d"
        Title="Авторизация" Height="450" Width="800">
    <Grid>
        <!--<Frame x:Name="frame" NavigationUIVisibility="Hidden" Opacity="1"/>-->
        <Grid>
            <TextBlock HorizontalAlignment="Center" Margin="0,100,0,0" Text="Имя пользователя" TextWrapping="Wrap" VerticalAlignment="Top"/>
            <TextBox x:Name="TbUsername" HorizontalAlignment="Center" Margin="0,120,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
            <TextBlock HorizontalAlignment="Center" Margin="0,140,0,0" Text="Пароль" TextWrapping="Wrap" VerticalAlignment="Top"/>
            <Button x:Name="BLogIn" Content="Войти" HorizontalAlignment="Left" Margin="340,200,0,0" VerticalAlignment="Top" Click="BLogIn_Click"/>
            <Button x:Name="BCancel" Content="Отмена" HorizontalAlignment="Left" Margin="414,200,0,0" VerticalAlignment="Top" Click="BCancel_Click"/>
            <PasswordBox x:Name="PbPassword" HorizontalAlignment="Center" Margin="0,160,0,0" VerticalAlignment="Top" Width="120"/>
        </Grid>
    </Grid>



</Window>
